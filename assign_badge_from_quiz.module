<?php

use Drupal\Core\Entity\EntityInterface;
use Drupal\assign_badge_from_quiz\Hook\QuizResultHook;

/**
 * Implements hook_quiz_result_insert().
 */
function assign_badge_from_quiz_quiz_result_insert(EntityInterface $entity) {
  \Drupal::service(QuizResultHook::class)->entityUpdate($entity);
}

/**
 * Implements hook_quiz_result_update().
 */
function assign_badge_from_quiz_quiz_result_update(EntityInterface $entity) {
  \Drupal::service(QuizResultHook::class)->entityUpdate($entity);
}